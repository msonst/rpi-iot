
[Unit]
Description=IoT Thing
Requires=docker.service
After=docker.service

[Service]
Restart=always
User=docker
# Remove old containers, images and volumes
ExecStartPre=/usr/local/bin/docker-compose -f /iot-thing/docker/docker-compose.yml down -v
ExecStartPre=/usr/local/bin/docker-compose -f /iot-thing/docker/docker-compose.yml rm -v
ExecStartPre=-/bin/bash -c 'docker volume rm $(docker volume ls -q)'
ExecStartPre=-/bin/bash -c 'docker rmi $(docker images | grep "<none>" | awk \'{print $3}\')'
ExecStartPre=-/bin/bash -c 'docker rm -v $(docker ps -aq)'

# Compose up
ExecStart=/usr/local/bin/docker-compose -f /iot-thing/docker/docker-compose.yml up

# Compose down, remove containers and volumes
ExecStop=/usr/local/bin/docker-compose -f /iot-thing/docker/docker-compose.yml down -v

[Install]
WantedBy=multi-user.target
